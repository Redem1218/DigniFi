            <div class="calendar-container">
                <div class="calendar">
                    <div class="calendar-header">
                        <span class="month-year">January 2025</span>
                        <div class="calendar-nav">
                            <button onclick="previousMonth()">‹</button>
                            <button onclick="nextMonth()">›</button>
                        </div>
                    </div>

                    <div class="day-names">
